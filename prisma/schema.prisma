// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Task {
  id          String   @id @default(cuid())
  title       String
  description String?
  status      String   @default("todo") // todo, in_progress, done, blocked
  priority    String   @default("medium") // low, medium, high, urgent
  dueDate     DateTime?
  assignedTo  String?  // "agent" or "user" or specific name
  tags        String?  // JSON array as string
  projectId   String?
  project     Project? @relation(fields: [projectId], references: [id], onDelete: SetNull)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([status])
  @@index([projectId])
  @@index([priority])
}

model Approval {
  id          String   @id @default(cuid())
  title       String
  description String?
  status      String   @default("pending") // pending, approved, denied
  requestedBy String
  requestedAt DateTime @default(now())
  respondedAt DateTime?
  response    String?  // approved or denied
  notes       String?
  metadata    String?  // JSON as string for additional context
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([status])
  @@index([requestedAt])
}

model Project {
  id          String   @id @default(cuid())
  name        String
  description String?
  status      String   @default("planning") // planning, active, paused, completed
  progress    Int      @default(0) // 0-100
  startDate   DateTime?
  endDate     DateTime?
  docs        String?  // Markdown content
  tasks       Task[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([status])
}

model Person {
  id              String   @id @default(cuid())
  name            String
  email           String?
  phone           String?
  tags            String?  // JSON array as string: ["client", "team", "friend"]
  socialLinks     String?  // JSON object as string: {"linkedin": "url", "twitter": "url", "github": "url"}
  notes           String?
  interactionHistory String? // JSON array as string
  lastContact     DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([name])
  @@index([lastContact])
}

model CronJob {
  id         String   @id @default(cuid())
  name       String
  expression String   // Cron expression
  command    String
  enabled    Boolean  @default(true)
  lastRun    DateTime?
  nextRun    DateTime?
  status     String?  // "success", "failed", "running"
  logs       String?  // JSON array as string
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([enabled])
  @@index([nextRun])
}

model MemoryEntry {
  id        String   @id @default(cuid())
  date      DateTime
  filePath  String   @unique
  content   String
  tags      String?  // JSON array as string
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([date])
}

model Document {
  id        String     @id @default(cuid())
  title     String
  path      String     @unique
  content   String
  parentId  String?
  parent    Document?  @relation("DocumentTree", fields: [parentId], references: [id], onDelete: Cascade)
  children  Document[] @relation("DocumentTree")
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@index([parentId])
  @@index([path])
}

model CalendarEvent {
  id            String   @id @default(cuid())
  title         String
  description   String?
  startTime     DateTime
  endTime       DateTime
  location      String?
  attendees     String?  // JSON array as string
  googleEventId String?  @unique
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([startTime])
  @@index([googleEventId])
}
